<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MangaTransparent" parent="Manga">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MangaTransparent.Dark" parent="Manga.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Manga" parent="MangaBaseTheme">
        <item name="android:buttonStyle">@style/Manga.ButtonCommon</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/darkest_blue</item>
        <item name="actionModeBackground">@color/action_mode_background</item>
        <item name="android:textColorSecondary">#fff</item>


        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>


        <item name="textAppearanceLargePopupMenu">@style/Manga.PopupMenu.TextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Manga.PopupMenu.TextAppearanceLarge</item>

        <item name="textAppearanceSmallPopupMenu">@style/Manga.PopupMenu.TextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Manga.PopupMenu.TextAppearanceSmall</item>

        <item name="popupMenuStyle">@style/Manga.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Manga.PopupMenu</item>

        <item name="searchViewStyle">@style/Manga.SearchView</item>

        <!--theme dependent-->
        <item name="color_primary">@color/dark_blue</item>
        <item name="color_primary_dark">@color/darkest_blue</item>
        <item name="action_mode_background">@color/light_blue</item>
        <item name="color_accent">@color/medium_dark_blue</item>
        <item name="toolbar_color">@color/dark_blue</item>
        <item name="fragment_background">#ffe3e3e3</item>
        <item name="menu_drawer_item_color">@color/black_unselected_white_selected</item>
        <item name="drawer_background_image">@drawable/material_background</item>
        <item name="grid_item_background">@drawable/grid_item_background</item>

        <item name="profile_text_toolbar_title">@android:color/white</item>
        <item name="profile_text_category_title">@color/medium_dark_blue</item>
        <item name="profile_text">@color/dark_gray</item>
        <item name="profile_divider">@color/light_gray</item>
        <item name="profile_card_background">@android:color/white</item>
        <item name="card_background">@android:color/white</item>
        <item name="card_text_color">@color/dark_gray</item>
        <item name="list_item_background_drawable">@drawable/list_item_background</item>
        <item name="toolbar_background_drawable">@drawable/toolbar_background</item>
        <item name="update_item_background_drawable">@drawable/updates_item_background</item>


        <!--icons-->
        <item name="button_chapters_icon">@drawable/button_chapters_icon</item>
        <item name="button_download_icon">@drawable/button_download_icon</item>
        <item name="button_online_icon">@drawable/button_online_icon</item>
        <item name="button_open_in_browser">@drawable/button_open_in_browser</item>

        <item name="ic_action_downloads">@drawable/ic_action_downloads</item>
        <item name="ic_action_new">@drawable/ic_action_new</item>
        <item name="ic_action_search_black">@drawable/ic_action_search_black</item>
        <item name="ic_action_settings">@drawable/ic_action_settings</item>
        <item name="ic_action_time">@drawable/ic_action_time</item>
        <item name="ic_chapters_list">@drawable/ic_chapters_list</item>
        <item name="ic_download_manager">@drawable/ic_download_manager</item>
        <item name="ic_readed">@drawable/ic_readed</item>
        <item name="ic_saved">@drawable/ic_saved</item>
        <item name="ic_action_discard">@drawable/ic_action_discard</item>
        <item name="ic_action_file_upload">@drawable/ic_action_file_upload</item>

    </style>

    <style name="Manga.Dark" parent="Manga">
        <item name="colorPrimary">#353535</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColorSecondary">#fff</item>


        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>

        <!--theme dependent-->
        <item name="color_primary">#353535</item>
        <item name="color_primary_dark">#000</item>
        <item name="action_mode_background">#222e39</item>
        <item name="color_accent">@color/medium_dark_blue</item>
        <item name="toolbar_color">#353535</item>
        <item name="fragment_background">#565656</item>
        <item name="menu_drawer_item_color">@color/white_unselected_white_selected</item>
        <item name="drawer_background_image">@drawable/material_background_dark</item>
        <item name="grid_item_background">@drawable/grid_item_background_dark</item>

        <item name="profile_text_toolbar_title">@android:color/white</item>
        <item name="profile_text_category_title">@android:color/white</item>
        <item name="profile_text">@android:color/white</item>
        <item name="profile_divider">#3d3d3d</item>
        <item name="profile_card_background">#4d4d4d</item>
        <item name="card_background">#353535</item>
        <item name="card_text_color">@android:color/white</item>
        <item name="list_item_background_drawable">@drawable/list_item_background_dark</item>
        <item name="toolbar_background_drawable">@drawable/toolbar_background_dark</item>
        <item name="update_item_background_drawable">@drawable/updates_item_background_dark</item>

        <!--icons-->
        <item name="button_chapters_icon">@drawable/dark_button_chapters_icon</item>
        <item name="button_download_icon">@drawable/dark_button_download_icon</item>
        <item name="button_online_icon">@drawable/dark_button_online_icon</item>
        <item name="button_open_in_browser">@drawable/dark_button_open_in_browser</item>

        <item name="ic_action_downloads">@drawable/dark_ic_action_downloads</item>
        <item name="ic_action_new">@drawable/dark_ic_action_new</item>
        <item name="ic_action_search_black">@drawable/dark_ic_action_search_black</item>
        <item name="ic_action_settings">@drawable/dark_ic_action_settings</item>
        <item name="ic_action_time">@drawable/dark_ic_action_time</item>
        <item name="ic_chapters_list">@drawable/dark_ic_chapters_list</item>
        <item name="ic_download_manager">@drawable/dark_ic_download_manager</item>
        <item name="ic_readed">@drawable/dark_ic_readed</item>
        <item name="ic_saved">@drawable/dark_ic_saved</item>
        <item name="ic_action_discard">@drawable/dark_ic_action_discard</item>
        <item name="ic_action_file_upload">@drawable/dark_ic_action_file_upload</item>

    </style>

    <style name="Manga.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/textfield_search</item>
    </style>

    <style name="Theme.CustomPanel" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

</resources>